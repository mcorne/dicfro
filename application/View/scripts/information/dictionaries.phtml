<h1 class="title">Liste des dictionnaires</h1>

<?php foreach($this->dictionariesHelper->getGroups() as $optgroup) :?>
  <p class="sub-title"><?=$optgroup['label'];?></p>

    <ul>
    <?php foreach($optgroup['options'] as $options) :?>

      <li>
      <a class="link <?=$options['type'];?>"
